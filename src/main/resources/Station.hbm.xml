<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Station" table="station">
        <id name="id" type="long" column="stationid">
            <generator class="native"/>
        </id>
        <property name="name">
            <column name="name"/>
        </property>
        <property name="phenomenon">
            <column name="phenomenon"/>
        </property>
        <property name="airTemperature">
            <column name="airtemperature"/>
        </property>
        <many-to-one name="observation" class="Observation" column="observationid"
                     cascade="all"/>
    </class>
</hibernate-mapping>

